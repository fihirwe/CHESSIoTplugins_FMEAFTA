<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.polarsys.chess.addprofile">
      <client class="org.polarsys.chess.iot.extension.managers.ApplyCHESSIoTProfile"/>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="GenerateThingMLmodel"
            name="Generate ThingML model">
      </command>
      <command
            id="deployemntartifacts"
            name="Generate Deployment Artifacts">
      </command>
      <command
            id="exportToLowcomotive"
            name="Export Model to Lowcomotive repository">
      </command>
      
   </extension>
   
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.polarsys.chess.iot.extension.handlers.CallGenerateThingMLgenerator"
            commandId="GenerateThingMLmodel">
      </handler>
      <handler
            class="org.polarsys.chess.iot.extension.handlers.GenerateDeploymentArtifacts"
            commandId="deployemntartifacts">
      </handler>
      <handler
            class="org.polarsys.chess.iot.extension.handlers.UploadModelsToRepo"
            commandId="exportToLowcomotive">
      </handler>
      
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.ihirwe.iot.extension.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      
      <menuContribution
            allPopups="false"
            locationURI="menu:org.polarsys.chess.mainMenu?after=chess.menu.tests.id">
         <menu
               id="chess.menu.debug.idd"
               label="CHESSIoT">
            <command
                  commandId="GenerateThingMLmodel"
                  icon="/icons/CHESSicon.gif"
                  style="push"
                  tooltip="Generate ThingML model">
            </command>
            <command
                  commandId="deployemntartifacts"
                  icon="/icons/CHESSicon.gif"
                  style="push"
                  tooltip="Generate Deployment Artifacts">
            </command>
            <command
                  commandId="exportToLowcomotive"
                  icon="/icons/CHESSicon.gif"
                  style="push"
                  tooltip="Export Model to Lowcomotive repository">
            </command>
         </menu>
      </menuContribution>  
      
      
      
   </extension>
   <extension
         point="org.eclipse.papyrus.infra.core.modelListener">
      <listener
            name="org.polarsys.chess.iot.extension.listerners"
            realization="org.polarsys.chess.iot.extension.listerners.ActionListerner">
      </listener>
   </extension>
   <extension
         point="org.eclipse.papyrus.infra.core.modelListener">
      <listener
            name="org.polarsys.chess.iot.extension.listerners2"
            realization="org.polarsys.chess.iot.extension.listerners.IoTEventListerner">
      </listener>
   </extension>
   <extension
         point="org.eclipse.papyrus.infra.core.modelListener">
      <listener
            name="org.polarsys.chess.iot.extension.listerners3"
            realization="org.polarsys.chess.iot.extension.listerners.IoTConnectorListerner">
      </listener>
   </extension>
   <extension
         point="org.eclipse.papyrus.infra.core.modelListener">
      <listener
            name="org.polarsys.chess.iot.extension.listerners4"
            realization="org.polarsys.chess.iot.extension.listerners.SystemProfileListerner">
      </listener>
   </extension>

</plugin>
