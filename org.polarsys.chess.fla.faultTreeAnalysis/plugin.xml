<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Automatic FT analysis"
            id="ftAnalysis.commands.category">
      </category>
      <command
            name="Analyse FTA"
            categoryId="ftAnalysis.commands.category"
            id="ftAnalysis.commands.analyseFT">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ftAnalysis.commands.analyseFT"
            class="org.polarsys.chess.fla.faultTreeAnalysis.handlers.FTAnalysisHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ftAnalysis.commands.analyseFT"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ftAnalysis.toolbars.sampleToolbar">
            <command
                  commandId="ftAnalysis.commands.analyseFT"
                  icon="icons/sample.gif"
                  tooltip="Launch the FT analysis"
                  id="ftAnalysis.toolbars.AnalyseFT">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.polarsys.chess.mainMenu?after=chess.menu.functverification.id">
         <menu
               id="chess.menu.dependability.id"
               label="Dependability">
            <command
                  commandId="ftAnalysis.commands.analyseFT"
                  label="Analyse the generate Fault-Tree"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
